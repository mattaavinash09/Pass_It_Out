@model UserVM

@using Pass_It_Out.View_Models
<head>
    <style>
        <style >
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-form {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 400px;
        }

            .login-form h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #007bff;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

        .form-control {
            height: 40px;
        }

        .btn-login {
            background-color: #007bff;
            color: #fff;
            height: 40px;
            width: 100%;
        }

            .btn-login:hover {
                background-color: #0056b3;
            }
    </style>
    </style>
</head>


<div class="login-container">

    <div class="login-form">
        
    <h2 style="font-family:Calibri; text-align:center;color:black;">User Login</h2>
@{
    @using(Html.BeginForm("UserLogin","User",FormMethod.Post))
    {
        <div class="mb-3">
            @Html.LabelFor(val=>val.UserId,new{@class="form-label"})
            @Html.TextBoxFor(val=>val.UserId,new{@class="form-control"})
        </div>
        <div class="mb-3">
            @Html.LabelFor(val=>val.Password,new{@class="form-label"})
            @Html.PasswordFor(val=>val.Password,new{@class="form-control"})
        </div>

        <input type="submit" value="Login" class="btn btn-primary"></input>
        <div class="mb-3">
            @Html.ActionLink("New User? Click here to Register","UserRegistration","User")
        </div>
    }
}
    </div>
</div>
