<h2 style="font-family:Calibri">Sent Requests</h2>

@{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">FriendId</th>
                <th scope="col">Status</th>
                <th scope="col">Requested Date</th>
                <th scope="col">Confirmed Date</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Friend friend in ViewBag.SentRequests)
            {
                <tr>
                    <td>@friend.FriendId</td>
                    <td>@friend.Status</td>
                    <td>@friend.RequestDate</td>
                    <td>@friend.ConfirmDate</td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/Friend/AllFriends">Back</a>
