<h2 style="font-family:Calibri">Friend Requests</h2>
@{

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">FriendId</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Friend friend in ViewBag.FriendsList)
            {
                if (friend.Status == Pass_It_Out.Common.Constants.FriendStatus.Pending)
                {                    
                    <tr>
                        <td>@friend.UserId</td>
                        <td>
                            @Html.ActionLink(Pass_It_Out.Common.Constants.FriendStatus.Active, "AcceptFriend", "Friend" ,new{@Id=friend.UserId})
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
}


<a href="/Friend/AllFriends">Back</a>





